<%- include('../../partials/views/html', {
    title : 'Logowanie',
    styles : [ 'user/css/login.css', 'partials/css/home-header.css', 'partials/css/home-footer.css' ],
});%>

<body>
    <%- include('../../partials/views/home-header');%>

    <main>
        <section>
            <h1>Zarejestruj się</h1>

            <form action="/user/new" method="POST">
                <% if (typeof error !== "undefined" && error ) { %>
                    <p class="error"><%= error %></p>
                <% } %>

                <div class="form-div">
                    <label for="login">Login:</label>
                    <input type="text" name="login" id="login" autocomplete="off" placeholder="Login użytkownika..." required>
                </div>

                <div class="form-div">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" autocomplete="off" placeholder="E-mail użytkownika..." required>
                </div>

                <div class="form-div">
                    <label for="password">Hasło:</label>
                    <input type="password" id="password" name="password" autocomplete="new-password" placeholder="Hasło użytkownika..." required>
                </div>

                <button type="submit">Zarejestruj</button>

                <p>Masz już konto? <a href="/user">Zaloguj się</a></p>
            </form>
        </section>
    </main>

    <%- include('../../partials/views/home-footer');%>
</body>
</html>