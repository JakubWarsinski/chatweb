<%- include('../../partials/views/html', {
    title : 'Logowanie',
    styles : [ 'user/css/login.css', 'partials/css/home-header.css', 'partials/css/home-footer.css' ],
});%>

<body>
    <%- include('../../partials/views/home-header');%>

    <main>
        <section>
            <h1>Zdobądź kod</h1>

            <form action="/user/forgot" method="POST">
                <% if (typeof error !== "undefined" && error ) { %>
                    <p class="error"><%= error %></p>
                <% } %>

                <div class="form-div">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" placeholder="E-mail użytkownika..." required>
                </div>

                <button type="submit">Potwierdź</button>
            </form>
        </section>
    </main>

    <%- include('../../partials/views/home-footer');%>
</body>
</html>